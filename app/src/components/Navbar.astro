---
import { Icon } from 'astro-icon';
---

<header
  class="fixed bottom-6 left-1/2 z-10 w-5/6 max-w-min sm:max-w-none -translate-x-1/2 rounded-3xl border shadow backdrop-blur-md border-zinc-700 bg-zinc-800/60 shadow-black/60 sm:w-auto">
  <nav class="flex items-center justify-start gap-3 overflow-x-auto sm:overflow-x-visible p-3">
    <a class="relative shrink-0 group h-16 w-16 bg-zinc-700 rounded-2xl flex justify-center items-center text-zinc-400 focus:text-zinc-300 hover:text-zinc-300 transition-all hover:ring-2 hover:ring-indigo-500 focus:ring-indigo-500 hover:ring-offset-2 focus:outline-none focus:ring-2 focus:ring-offset-2 ring-offset-slate-700"
      href="/">
      <Icon pack="entypo" name="home"
        class="h-auto w-8 group-hover:w-12 group-focus:w-12 transition-all fill-current" />
      <span
        class="absolute py-1 delay-100 border-zinc-600 duration-300 shadow-black/60 bg-zinc-700 shadow font-medium -top-[3.25rem] text-sm pointer-events-none w-auto min-w-max px-2 border-t rounded-md opacity-0 sm:group-focus:opacity-100 transition-opacity sm:group-hover:opacity-100 text-zinc-300">
        Home
      </span>
    </a>

    <a class="relative shrink-0 group h-16 w-16 bg-zinc-700 rounded-2xl flex justify-center items-center text-zinc-400 focus:text-zinc-300 hover:text-zinc-300 transition-all hover:ring-2 hover:ring-indigo-500 focus:ring-indigo-500 hover:ring-offset-2 focus:outline-none focus:ring-2 focus:ring-offset-2 ring-offset-slate-700"
      href="/finance">
      <Icon pack="healthicons" name="money-bag"
        class="h-auto w-8 group-hover:w-12 group-focus:w-12 transition-all fill-current" />
      <span
        class="absolute py-1 delay-100 border-zinc-600 duration-300 shadow-black/60 bg-zinc-700 shadow font-medium -top-[3.25rem] text-sm pointer-events-none w-auto min-w-max px-2 border-t rounded-md opacity-0 sm:group-focus:opacity-100 transition-opacity sm:group-hover:opacity-100 text-zinc-300">
        Finance
      </span>
    </a>
  </nav>
</header>